<h2>맵 공개 여부</h2>
<br>
<form action="/info/update" method="post">

  <div>
    <input type="radio" id="contactChoice1"
     name="state" value="true">
    <label for="contactChoice1">표시</label>

    <input type="radio" id="contactChoice2"
     name="state" value="false">
    <label for="contactChoice2">숨기기</label>
  </div>

  <div class="form-group" align="left" style=" margin-top: 10pt">
    <input type="submit" class="btn btn-default" class="form-control" >
  </div>
  
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>

<hr>
<%= link_to 'Back', '/', class: 'btn btn-default' %>


<script>
  <% if current_user.state == true %>
    $('#contactChoice1').prop("checked", true);
  <% else %>
    $('#contactChoice2').prop("checked", true);
  <% end %>
</script>