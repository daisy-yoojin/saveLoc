<div>
	<h2>나를 좋아요 한 사람</h2>
	<% @followee.each do |follow| %>
		<form action="/followers/search" method="post">
		  <div class="form-group" style=" margin-top: 10pt">  
		    <input type="text" name="user_email" id="user_email" class="form-control" value="<%= User.find(follow.follower).email %>"> 
		  </div>
		  <div class="form-group" align="left" style=" margin-top: 10pt">
		    <input type="submit" class="btn btn-default" class="form-control" >
		  </div>
		  
		  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		</form>
	<% end %>
</div>

<div>
	<h2>내가 좋아요 한 사람</h2>
	<% @follower.each do |follow| %>
		<form action="/followers/search" method="post">
		  <div class="form-group" style=" margin-top: 10pt">  
		    <input type="text" name="user_email" id="user_email" class="form-control" value="<%= User.find(follow.user_id).email %>"> 
		  </div>
		  <div class="form-group" align="left" style=" margin-top: 10pt">
		    <input type="submit" class="btn btn-default" class="form-control" >
		  </div>
		  
		  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		</form> 
	<% end %>
</div>