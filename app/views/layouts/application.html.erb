<!DOCTYPE html>
<html>
<head>
  <title>MyMap</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <!---->
  	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, 	maximum-scale=1.0, user-scalable=0" />
	<!---->
</head>
<body>
	<!--
	<p class="notice"><%= notice %></p>
  	<p class="alert"><%= alert %></p>
	-->
	<!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Mymap</a>
    </div>
	<div class="navbar-collapse collapse">
		<ul class="nav navbar-nav">
		    <li class="active"><%= link_to "Home", root_path %></li>
		    <li><%= link_to "Pic", "/markers/new" %></li>
		    <li><%= link_to "Posts", "/posts" %></li>
		    <li><%= link_to "YouerMap", "/followers/show" %></li>
		    <li><%= link_to "Ranking", "/followers/rank" %></li>
		    <li><%= link_to "people", "/followers/search_follower" %></li>
		    <li><%= link_to "search", "/followers/search_user" %></li>
		</ul>
		<ul class="nav navbar-nav navbar-right">
		    <% if user_signed_in? %>
		    	<li class="dropdown">
		        	<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
		        	<ul class="dropdown-menu">
		          		<li><%= link_to "My Profile", edit_user_registration_path %></li>
		          		<li><%= link_to "Map 공개여부", '/info/edit' %></li>
		          		<li><%= link_to "Roles : " + user_roles(current_user), '#' %></li>
		          		<li><%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" } %></li>
		          		<li><%= link_to "회원 탈퇴", 'info/destroy/', method: :delete, data: { confirm: "Are you sure?" } %></li>
		        	</ul>
		      	</li>
		    <% else %>
		      <li><%= link_to "Sign in", new_user_session_path %></li>
		      <li><%= link_to "Sign up", new_user_registration_path %></li>
		    <% end %>
		</ul>
	</div>
	</div>
    </div>

    <div class="container">
    	<%= render partial: "shared/flash_messages", flash: flash %>
		<%= yield %>
	</div><!-- /container -->
</body>
</html>
